# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                        controllers.Application.index

# Admin section
GET        /admin                   controllers.admin.Administration.home
GET        /admin/technology        controllers.admin.Administration.techList(p: Int ?= 0, s: Int ?= 2, f ?= "")
GET        /admin/quiz              controllers.admin.Administration.quizList(p: Int ?= 0, s: Int ?= 2, f ?= "")
GET        /admin/questionnarie     controllers.admin.Administration.questList(p: Int ?= 0, s: Int ?= 2, f ?= "")
GET        /admin/tests             controllers.admin.Administration.testList(p: Int ?= 0, s: Int ?= 2, f ?= "")

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file            controllers.Assets.at(path="/public", file)


